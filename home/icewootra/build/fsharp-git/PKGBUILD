# Maintainer: Joris Putcuyps <Joris.Putcuyps at gmail dot com>
pkgname=fsharp-git
pkgver=20130525
pkgrel=1
pkgdesc="An ML based functional language integrated with the .NET platform."
arch=('any')
url="http://fsharp.org"
license=('APACHE')
groups=()
depends=('mono>=2.10.2')
makedepends=('git')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
#install=
source=()
noextract=()
md5sums=()

_gitroot="https://github.com/fsharp/fsharp.git"
_gitname="fsharp"


build()
{
  cd $srcdir

  msg "Getting source from GIT server...."
  if [[ -d $srcdir/$_gitname ]] ; then
     cd $_gitname
     git pull origin
     msg "The local files are updated..."
  else
     git clone --depth 1 $_gitroot
     cd $_gitname
  fi

  msg "Configuring..."

  ./autogen.sh --prefix /usr

  msg "Building..."

  make || return 1

  make DESTDIR=$pkgdir install || return 1
}
